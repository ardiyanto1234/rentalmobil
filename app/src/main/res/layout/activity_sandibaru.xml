<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sandibaru">

    <ImageView
        android:id="@+id/gambarSandibaru"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:background="@drawable/logo2"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/textSandiBaru"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sandi Baru"
        android:textSize="@dimen/_20sdp"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_150sdp"
        app:layout_constraintTop_toTopOf="@id/gambarSandibaru"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
    android:id="@+id/usernameBaru"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Sandi Baru"
    app:layout_constraintTop_toTopOf="@+id/textSandiBaru"
    android:layout_marginTop="@dimen/_80sdp"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_marginLeft="@dimen/_50sdp"
    tools:ignore="MissingConstraints"
    />

    <EditText
        android:id="@+id/editTextUsername"
        android:layout_width="300dp"
        android:layout_height="36dp"
        android:background="@drawable/backgroundtext"
        android:hint="Sandi Baru"
        android:paddingLeft="20dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/usernameBaru" />

    <Button
        android:layout_height="@dimen/_40sdp"
        android:text=""/>





</androidx.constraintlayout.widget.ConstraintLayout>