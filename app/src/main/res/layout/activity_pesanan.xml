<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/kuning2"
    tools:context=".pesanan">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/btnKembaliDetail"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="70dp"
        android:background="@drawable/arrowback"
        android:backgroundTint="@color/black"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    
    <TextView
        android:id="@+id/keteranganMobil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Innova Reborn"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnKembaliDetail"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="@dimen/_20sdp"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/gambarPesanan"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_150sdp"
        android:layout_marginTop="@dimen/_50sdp"
        android:background="@drawable/innovabg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnKembaliDetail"
        />

    <TextView
        android:id="@+id/inputIdentitas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_150sdp"
        android:text="Masukan Identitas"
        android:textSize="@dimen/_20sdp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/gambarPesanan"
        />

    <TextView
        android:id="@+id/namaLengkap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_200sdp"
        android:text="nama"
        android:textSize="@dimen/_13sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/gambarPesanan"
        />

    <EditText
        android:id="@+id/editTextNama"
        android:layout_width="@dimen/_134sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_15sdp"
        app:boxBackgroundColor="@color/white"
        app:boxCornerRadiusBottomEnd="@dimen/_10sdp"
        app:boxCornerRadiusBottomStart="@dimen/_10sdp"
        app:boxCornerRadiusTopEnd="@dimen/_10sdp"
        app:boxCornerRadiusTopStart="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="@+id/namaLengkap"
        />


    <TextView
        android:id="@+id/Alamat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_165sdp"
        android:layout_marginTop="@dimen/_200sdp"
        android:text="Alamat"
        android:textSize="@dimen/_13sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/gambarPesanan"
        />

    <EditText
        android:id="@+id/editTextAlamat"
        android:layout_width="@dimen/_140sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginLeft="@dimen/_160sdp"
        android:layout_marginTop="@dimen/_15sdp"
        app:boxBackgroundColor="@color/white"
        app:boxCornerRadiusBottomEnd="@dimen/_10sdp"
        app:boxCornerRadiusBottomStart="@dimen/_10sdp"
        app:boxCornerRadiusTopEnd="@dimen/_10sdp"
        app:boxCornerRadiusTopStart="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="@+id/namaLengkap"
       />




    <TextView
        android:id="@+id/Notlp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_270sdp"
        android:text="No telphone"
        android:textSize="@dimen/_13sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/gambarPesanan"
        />

    <EditText
        android:id="@+id/editTextNotlphone"
        android:layout_width="@dimen/_140sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_15sdp"
        app:boxBackgroundColor="@color/white"
        app:boxCornerRadiusBottomEnd="@dimen/_10sdp"
        app:boxCornerRadiusBottomStart="@dimen/_10sdp"
        app:boxCornerRadiusTopEnd="@dimen/_10sdp"
        app:boxCornerRadiusTopStart="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/Notlp"
        android:background="@color/white"
        />

    <TextView
        android:id="@+id/tagllahir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_165sdp"
        android:layout_marginTop="@dimen/_270sdp"
        android:text="Tanggal pemesanan"
        android:textSize="@dimen/_13sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/gambarPesanan"
        />

    <EditText
        android:id="@+id/editTextTglLahir"
        android:layout_width="@dimen/_140sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginLeft="@dimen/_160sdp"
        android:layout_marginTop="@dimen/_15sdp"
        app:boxBackgroundColor="@color/white"
        app:boxCornerRadiusBottomEnd="@dimen/_10sdp"
        app:boxCornerRadiusBottomStart="@dimen/_10sdp"
        app:boxCornerRadiusTopEnd="@dimen/_10sdp"
        app:boxCornerRadiusTopStart="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tagllahir"
        android:background="@color/white"
        />

        <TextView
            android:id="@+id/UploadKtp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_350sdp"
            android:text="Upload Ktp"
            android:textSize="@dimen/_13sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/gambarPesanan"
            />

        <LinearLayout
            android:layout_width="@dimen/_300sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_40sdp"
            android:background="@color/white"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/editTextTglLahir"
            >

            <com.google.android.material.button.MaterialButton
                android:id="@+id/selectFileButton3"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="-5dp"
                android:layout_marginBottom="-5dp"
                android:backgroundTint="@color/black"
                android:onClick="selectImageFile"
                android:text="Pilih File"
                android:textAllCaps="false"
                android:textColor="@color/kuning2"
                android:textSize="@dimen/_11ssp"
                app:cornerRadius="@dimen/_8sdp" />

            <TextView
                android:id="@+id/textViewButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_8sdp"
                android:hint="Gambar berformat PNG, JPG, SVG"
                android:textSize="@dimen/_13ssp" />
            Â </LinearLayout>

    <TextView
        android:id="@+id/textAturJadwal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Atur Jadwal"
        app:layout_constraintTop_toTopOf="@id/editTextTglLahir"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_150sdp"
        android:textStyle="bold"
        />
    
     <Button
        android:id="@+id/jam12"
        android:layout_width="@dimen/_90sdp"
        android:layout_height="@dimen/_50sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textAturJadwal"
        android:layout_marginLeft="@dimen/_15sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        android:text="12 Jam"
        android:textStyle="bold"
        android:textColor="@color/kuning2"
        android:backgroundTint="@color/black"/>



    <Button
        android:id="@+id/jam24"
        android:layout_width="@dimen/_90sdp"
        android:layout_height="@dimen/_50sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textAturJadwal"
        android:layout_marginLeft="@dimen/_110sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        android:backgroundTint="@color/black"
        android:text="24 jam"
        android:textStyle="bold"
        android:textColor="@color/kuning2"
        />



    <Button
        android:id="@+id/hari2"
        android:layout_width="@dimen/_90sdp"
        android:layout_height="@dimen/_50sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textAturJadwal"
        android:layout_marginLeft="@dimen/_210sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        android:backgroundTint="@color/black"
        android:text="2 Hari"
        android:textStyle="bold"
        android:textColor="@color/kuning2"/>


    <Button
        android:id="@+id/btnSelesai"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="PESAN"
        android:textStyle="bold"
        android:textColor="@color/kuning2"
        android:backgroundTint="@color/black"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toTopOf="@id/hari2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>