<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".pesanan">

    <ImageButton
        android:id="@+id/btnKembaliHome"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="70dp"
        android:background="@drawable/button_back"
        android:backgroundTint="@color/black"
        android:textColor="@color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="70dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="AVANZA 2017 (silver)"
            android:textStyle="bold"
            android:textSize="30dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/mobilpesanan"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Spesifikasi"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginLeft="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:backgroundTint="@color/abu_abu"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                app:cardCornerRadius="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="isi Silinder"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="1.329"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:backgroundTint="@color/abu_abu"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                app:cardCornerRadius="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="Torsi Maksimal"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="12,3/ 4.200 rpm"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="110dp"
                android:layout_height="50dp"
                android:backgroundTint="@color/abu_abu"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                app:cardCornerRadius="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="Tranmisi"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="5 speed M/T"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rencana"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"/>
    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="140dp"
                android:layout_height="60dp"
                android:backgroundTint="@color/abu_abu"
                android:layout_marginTop="370dp"
                app:cardCornerRadius="20dp"
                android:layout_marginLeft="15dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/jam"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="150K"
                    android:layout_marginTop="35dp"
                    android:layout_marginLeft="9dp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="95dp"
                    android:layout_height="60dp"
                    android:backgroundTint="@color/blue"
                    android:layout_marginLeft="50dp">

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="20dp"
                        android:text="12 jam"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"/>


                </androidx.cardview.widget.CardView>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="140dp"
                android:layout_height="60dp"
                android:backgroundTint="@color/abu_abu"
                android:layout_marginTop="370dp"
                app:cardCornerRadius="20dp"
                android:layout_marginLeft="15dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/jam"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="300K"
                    android:layout_marginTop="35dp"
                    android:layout_marginLeft="9dp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="95dp"
                    android:layout_height="60dp"
                    android:backgroundTint="@color/blue"
                    android:layout_marginLeft="50dp">


                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="20dp"
                        android:text="24 jam"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"/>


                </androidx.cardview.widget.CardView>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Lokasi"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="60dp">

        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="150K"
            android:layout_marginTop="550dp"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:textSize="20dp"/>

        <TextView
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="/ 12 JAM"
            android:layout_marginTop="550dp"
            android:textStyle="bold"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/pesan_button"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:layout_marginTop="550dp"
            android:backgroundTint="@color/blue"
            android:text="PESAN"
            android:textColor="@color/white"/>
    </LinearLayout>

</FrameLayout>