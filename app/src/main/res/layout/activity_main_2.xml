<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/white">

    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:background="@drawable/logo"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="50dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="160dp"
        android:textSize="30dp"/>

    <EditText
        android:id="@+id/editTextUsername"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Usnername"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="50dp"
        android:minHeight="65dp"
        android:minWidth="65dp"
        android:textColor="@color/abu_abu"
        android:background="@drawable/backgroundtext"
        />

    <EditText
        android:id="@+id/editTextPassowrd"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="330dp"
        android:layout_marginLeft="50dp"
        android:hint="Password"
        android:minWidth="65dp"
        android:minHeight="65dp"
        android:textColor="@color/abu_abu"
        android:background="@drawable/backgroundtext" />

    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Login"
        android:backgroundTint="@color/green"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="100dp"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Belum Punya Akun? Register"
        android:layout_marginTop="450dp"
        android:layout_marginLeft="110dp"/>

    <Button
        android:id="@+id/buttonRegister"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Register"
        android:backgroundTint="@color/green"
        android:layout_marginTop="470dp"
        android:layout_marginLeft="100dp"
        android:textColor="@color/black"/>


    <TextView
        android:text="Or sigin with "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="520dp"
        android:layout_marginLeft="160dp"/>

    <ImageView
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:background="@drawable/minimaze"
        android:layout_marginTop="520dp"/>

    <ImageView
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:background="@drawable/minimaze"
        android:layout_marginTop="520dp"
        android:layout_marginLeft="190dp"/>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/goggle"
        android:layout_marginTop="570dp"
        android:layout_marginLeft="160dp"/>

</RelativeLayout>