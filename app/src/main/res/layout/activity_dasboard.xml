<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center_horizontal"
    android:id="@+id/body_container"
    tools:context=".Dasboard">

   <FrameLayout
      android:id="@+id/frame"
       android:layout_width="match_parent"
       android:layout_height="0dp"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
       android:backgroundTint="@color/abu_abu"
      app:layout_constraintBottom_toTopOf="@+id/bottomNavigasi"/>

<com.google.android.material.bottomnavigation.BottomNavigationView
    android:id="@+id/bottomNavigasi"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="2dp"
    app:itemIconTint="@color/kuning2"
    app:itemTextColor="@color/kuning2"
    app:menu="@menu/buttom_nav_menu"
    android:background="@color/black"
    app:itemBackground="@color/black"
    app:itemActiveIndicatorStyle="@color/black"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />

   </androidx.constraintlayout.widget.ConstraintLayout>
