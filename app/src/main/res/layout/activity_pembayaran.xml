<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pembayaran">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="140dp"
            android:layout_height="70dp"
            android:background="@drawable/frametransfer"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="20dp"
            android:text="Transfer"
            android:textColor="@color/black"/>

        <ImageView
            android:layout_width="140dp"
            android:layout_height="70dp"
            android:background="@drawable/framecase"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="50dp"
            android:text="Transfer"
            android:textColor="@color/black"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Nomor Rekening"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="20dp"
        android:textSize="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp">


        <EditText
            android:id="@+id/editTextname"
            android:layout_width="300dp"
            android:layout_height="36dp"
            android:hint="Nama"
            android:paddingLeft="20dp"
            android:textColor="@color/black"
            android:background="@drawable/backgroundtext"
            android:layout_marginTop="200dp"
            />

        <EditText
            android:id="@+id/editTextNomor"
            android:layout_width="300dp"
            android:layout_height="36dp"
            android:hint="No.hp"
            android:paddingLeft="20dp"
            android:textColor="@color/black"
            android:background="@drawable/backgroundtext"
            android:layout_marginTop="20dp"
            />

        <EditText
            android:id="@+id/editTextEmail"
            android:layout_width="300dp"
            android:layout_height="36dp"
            android:hint="Masukan Email"
            android:paddingLeft="20dp"
            android:textColor="@color/black"
            android:background="@drawable/backgroundtext"
            android:layout_marginTop="20dp"
            />

        <EditText
            android:id="@+id/editTextTanggal"
            android:layout_width="300dp"
            android:layout_height="36dp"
            android:hint="Tanggal"
            android:paddingLeft="20dp"
            android:textColor="@color/black"
            android:background="@drawable/backgroundtext"
            android:layout_marginTop="20dp"
            />




    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>